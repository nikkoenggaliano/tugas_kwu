<%- include template/header.ejs %>
<style type="text/css">
	ul.timeline {
    list-style-type: none;
    position: relative;
}
ul.timeline:before {
    content: ' ';
    background: #d4d9df;
    display: inline-block;
    position: absolute;
    left: 29px;
    width: 2px;
    height: 100%;
    z-index: 400;
}
ul.timeline > li {
    margin: 20px 0;
    padding-left: 20px;
}
ul.timeline > li:before {
    content: ' ';
    background: white;
    display: inline-block;
    position: absolute;
    border-radius: 50%;
    border: 3px solid #22c0e8;
    left: 20px;
    width: 20px;
    height: 20px;
    z-index: 400;
}
</style>

<div class="container mt-5 mb-5">
	<div class="row">
		<div class="col-md-6 offset-md-3">
			<h4>New Series</h4>
			<ul class="timeline">
				<%if(series){ series.forEach((data)=>{%>
				<li>
					<a target="_blank" href="/list-video/<%= data.id %>"><%= data.judul %></a>
					<p class="float-right">( <%= data.tags %> )</p>
					<p><%= data.deskripsi %></p>
				</li>
				<%}); }%>
			</ul>
		</div>
	</div>
</div>

<%- include template/footer.ejs %>