<%- include template/header.ejs%>
<main class="page-content">
    <div class="container-fluid">
      <h2>Code Goes after here</h2>
      <hr>
      </div>
    
      <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="content table-responsive table-full-width">
                                <table id="myTable" class="table table-striped">
                                    <thead>
                                        <th>No</th>
                                        <th>Judul</th>
                                        <th>Kategori</th>
                                        <th>Status</th>
                                        <th>Jumlah</th>
                                        <th>Action</th>
                                    </thead>
                                    <tbody> 
                                    <% if(isi){ isi.forEach((data,index) =>{ %>
                                        <tr>
                                            <td><%= (index+1) %></td>
                                            <td><a href="/admin/post-list/<%=data.id%>"><%= data.judul %></td>
                                            <td><%= data.nama %></td>
                                            <% if(data.status == 0){ %>
                                              <td style="color: red;">OFF</td>
                                            <% }else if(data.status == 1){ %>
                                              <td style="color: blue;">ON</td>
                                            <% }else{ %>
                                              <td style="color: green;">Development</td>
                                            <% } %>
                                            <td><%= data.jumlah %></td>
                                           <td>
                                            <a href="/admin/edit-series/<%= data.id %>" class="btn btn-info" onclick="return confirm('Edit <%=data.judul%> ?');">Edit</a>
                                            <a href="/admins/delete/<%=data.id%>/series" class="btn btn-danger" onclick="return confirm('Hapus <%=data.judul%> ?');">Delete</a> 
                                              </td>
                                        </tr>
                                    <%  }); } %>                         
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
  <script type="text/javascript">
    $(document).ready(function() {
      $('#myTable').DataTable();
  });
  </script>
                </div>
            </div>
        </div>

    </div>
  </main>
<%- include template/footer.ejs%>