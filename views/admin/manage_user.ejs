<%- include template/header.ejs%>
<main class="page-content">
    <div class="container-fluid">
      <h2>Code Goes after here</h2>
      <hr>
      </div>
    
      <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="content table-responsive table-full-width">
                                <table id="myTable" class="table table-striped">
                                    <thead>
                                        <th>No</th>
                                        <th>Username</th>
                                    	<th>Email</th>
                                    	<th>Status</th>
                                        <th>Action</th>
                                    </thead>
                                    <tbody> 
                                    <% if(isi){ isi.forEach((data,index) =>{ %>
                                        <tr>
                                            <td><%= (index+1) %></td>
                                            <td><%= data.username %></td>
                                            <td><%= data.email %></td>
                                            <% if(data.status == 0){ %>
                                            	<td style="color: red;">OFF</td>
                                           	<% }else{ %>
                                           		<td style="color: blue;">ON</td>
                                            <% } %>
                                            
                                           <td><a href="/admins/edit-user/<%=data.id%>" class="btn btn-info">Edit</a>
                                           	<a href="/admins/del-user/<%=data.id%>" class="btn btn-danger" onclick="return confirm('Delete user <%=data.username%> ?');">Delete</a> 
                                        </tr>
                                    <%  }); } %>                         
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
  <script type="text/javascript">
  	$(document).ready(function() {
    	$('#myTable').DataTable();
	});
  </script>
                </div>
            </div>
        </div>

    </div>
  </main>
<%- include template/footer.ejs%>