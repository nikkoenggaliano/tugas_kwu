<script type="text/javascript">
    function validform() {

        var a = document.forms["my-form"]["judul"].value;
        var b = document.forms["my-form"]["cat"].value;
        var c = document.forms["my-form"]["tags"].value;
        var d = document.forms["my-form"]["deskripsi"].value;
        var e = document.forms["my-form"]["url"].value;
        
        if (a==null || a=="")
        {
            alert("Please Enter Your Full Name");
            return false;
        }else if (b==null || b=="")
        {
            alert("Please Enter Your Email Address");
            return false;
        }else if (c==null || c=="")
        {
            alert("Please Enter Your Username");
            return false;
        }else if (d==null || d=="")
        {
            alert("Please Enter Your Permanent Address");
            return false;
        }else if (e==null || e=="")
        {
            alert("Please Enter Your Permanent Address");
            return false;
        }

    }
