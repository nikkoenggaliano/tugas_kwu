<%- include template/header.ejs%>
<main class="page-content">
    <div class="container-fluid">
      <h2>Code Goes after here</h2>
      <hr>
      </div>
    
      <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="content table-responsive table-full-width">
                                <table id="myTable" class="table table-striped">
                                    <thead>
                                        <th>No</th>
                                        <th>Judul</th>
                                    	  <th>Tag</th>
                                    	  <th>Status</th>
                                        <th>Action</th>
                                    </thead>
                                    <tbody> 
                                    <% if(isi){ isi.forEach((data,index) =>{ %>
                                        <tr>
                                            <td><%= (index+1) %></td>
                                            <td><%= data.judul %></td>
                                            <td><%= data.tag %></td>
                                            <% if(data.status == 0){ %>
                                            	<td style="color: red;">OFF</td>
                                           	<% }else if(data.status == 1){ %>
                                           		<td style="color: blue;">ON</td>
                                            <% }else{ %>
                                              <td style="color: green;">Development</td>
                                            <% } %>
                                            
                                           <td>
                                            <a href="/admins/post-status/<%=data.id%>/1/<%=data.sid%>" class="btn btn-info" onclick="return confirm('Activekan <%=data.judul%> ?');">ON</a>
                                            <a href="/admins/post-status/<%=data.id%>/0/<%=data.sid%>" class="btn btn-danger" onclick="return confirm('Deactivekan <%=data.judul%> ?');">OFF</a>
                                              </td>
                                        </tr>
                                    <%  }); } %>                         
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
  <script type="text/javascript">
  	$(document).ready(function() {
    	$('#myTable').DataTable();
	});
  </script>
                </div>
            </div>
        </div>

    </div>
  </main>
<%- include template/footer.ejs%>